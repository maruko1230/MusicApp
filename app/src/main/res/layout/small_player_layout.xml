<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/small_player_height"
    >

    <ImageView
        android:id="@+id/small_player_cover_image"
        android:layout_width="@dimen/small_player_icon_size"
        android:layout_height="@dimen/small_player_icon_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/small_player_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="AAAAA AAAA AAAAA"
        android:textSize="24sp"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/small_player_current_play"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toEndOf="@+id/small_player_cover_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/small_player_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="BBBBB BBBBB BBBBB"
        android:textSize="16sp"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/small_player_cover_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/small_player_title" />

    <TextView
        android:id="@+id/small_player_current_play"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_player_icon_size"
        android:text=">"
        android:textSize="24dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/small_player_play_next"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/small_player_play_next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_player_icon_size"
        android:text=">>"
        android:textSize="24dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
